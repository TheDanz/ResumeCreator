<Window x:Class="ResumeCreator.DoneResumeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ResumeCreator"
        mc:Ignorable="d"
        Title="DoneResumeWindow" Height="450" Width="800">
    <Grid>
        <Label Content="Резюме готово" HorizontalAlignment="Center" Margin="0,77,0,0" VerticalAlignment="Top"/>
        <Button Content="Вывести готовое резюме на экран" HorizontalAlignment="Left" Margin="54,193,0,0" VerticalAlignment="Top" Height="142" Click="DisplayOutput_Click"/>
        <Button Content="Сохранить готовое резюме в PDF" HorizontalAlignment="Center" Margin="0,197,0,0" VerticalAlignment="Top" Height="138" Click="PDFOutput_Click"/>
        <Button Content="Отправить резюме по почте" HorizontalAlignment="Left" Margin="554,193,0,0" VerticalAlignment="Top" Height="142" Click="MailOutput_Click"/>
        <TextBox Name="textBoxUserMail" HorizontalAlignment="Left" Margin="574,383,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Enter your mail:" HorizontalAlignment="Left" Margin="588,352,0,0" VerticalAlignment="Top"/>
        <WebBrowser Name="wb" Margin="14,19,512,273"/>

    </Grid>
</Window>
