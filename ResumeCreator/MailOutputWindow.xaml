<Window x:Class="ResumeCreator.MailOutputWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ResumeCreator"
        mc:Ignorable="d"
        Title="ResumeCreator" Height="180" Width="200"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">
    <Grid Background="BlanchedAlmond">
        <StackPanel Margin="10,10,10,90" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label Content="Введите e-mail получателя:"/>
            <TextBox Name="textBoxMailTo" TextWrapping="NoWrap" BorderBrush="#FFFFFDFD"/>
        </StackPanel>
        <Button Content="Отправить" Margin="100,110,10,10" Click="SendMessage_Click" BorderBrush="#FFFFFDFD" Background="#FFEBEBEB"/>
    </Grid>
</Window>
